<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RadioGroup
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rdgfiltro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_filtro_todas"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:textSize="18sp"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="@string/filtro_todas"/>
        <RadioButton
            android:id="@+id/radio_filtro_ultimos_7_dias"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:textSize="18sp"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="@string/filtro_ultimos_7_dias"/>
        <RadioButton
            android:id="@+id/radio_filtro_ultimos_mes"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:textSize="18sp"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="@string/filtro_ultimos_mes"/>
        <RadioButton
            android:id="@+id/radio_filtro_ebd"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:textSize="18sp"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="@string/filtro_ebd"/>
        <RadioButton
            android:id="@+id/radio_filtro_senhoras"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:textSize="18sp"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="@string/filtro_senhoras"/>
        <RadioButton
            android:id="@+id/radio_filtro_glorificacao"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:textSize="18sp"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="@string/filtro_glorificacao"/>
        <RadioButton
            android:id="@+id/radio_filtro_madrugada"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:textSize="18sp"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="@string/filtro_madrugada"/>
    </RadioGroup>
</LinearLayout>